---
import AlterHero from '@components/sections/AlterHero.astro';
import Certifications from '@components/sections/Certifications.astro';
import ContactMe from '@components/sections/ContactMe.astro';
import PersonalProjects from '@components/sections/PersonalProjects.astro';
import Skills from '@components/sections/Skills.astro';
import Works from '@components/sections/Works.astro';

import Layout from '@layouts/Layout.astro';

import { loadLocale } from '@utils/i18n.js';
const { currentLocale } = Astro;
const t = await loadLocale(currentLocale);

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout currentLocale={currentLocale} t={t}> 
	<main>
		<AlterHero t={t}/>
		<Skills t={t}/>
		<PersonalProjects t={t}/>
		<Works t={t}/>
		<Certifications	t={t}/>
		<ContactMe t={t}/>
	</main>
</Layout>
